# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mariposa

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=24h

# AI Configuration
TOGETHER_API_KEY=your-together-ai-api-key-here

# Hedera Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=your-hedera-private-key-here

# Hedera Network Endpoints (optional - defaults will be used if not specified)
HEDERA_TESTNET_NODES=testnet.hedera.com:50211
HEDERA_MAINNET_NODES=mainnet.hedera.com:50211

# Hedera Token Service Configuration
HTS_TREASURY_ACCOUNT_ID=0.0.YOUR_TREASURY_ACCOUNT_ID
HTS_TREASURY_PRIVATE_KEY=your-treasury-private-key-here

# Wallet Security
WALLET_ENCRYPTION_KEY=change_this_to_a_secure_key_in_production

# Other Configuration
BCRYPT_SALT_ROUNDS=12 